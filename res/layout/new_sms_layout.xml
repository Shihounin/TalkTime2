<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blank640x960"
    android:onClick="sendIt" >

    <TextView
        android:id="@+id/smsPartner_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/partnerPhone_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smsPartner_key"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:textColor="@color/Black"
        android:textSize="18sp" 
        />

    <EditText
        android:id="@+id/smsMessage_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partnerPhone_key"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:enabled="true"
        android:inputType="textMultiLine"
        android:background="@drawable/drawable_text_box"
        android:minLines="4" />

    <Button
        android:id="@+id/sms_send_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smsMessage_key"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Send"
        android:onClick="sendIt" />

</RelativeLayout>
